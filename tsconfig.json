{
   "compilerOptions": {
      "target": "ESNext",
      "module": "CommonJS",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "moduleResolution": "node",
      "noImplicitAny": false,
      "allowJs": true,
      "declaration": true,
      "declarationMap": true,
      "sourceMap": true,
      "outDir": "bin",
      "baseUrl": "./src",
      "typeRoots": [
         "./node_modules/@types"
      ]
   },
   "include": [
      "**/*.ts",
      "**/*.tsx"
   ],
   "exclude": [
      "node_modules"
   ]
}